@model IEnumerable<Online_Store_Test4.Database.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Short Description
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.detail)
        </th>*@
        <th>
            Image
        </th>
        <th>
            Price
        </th>
        <th>
            Posted Time
        </th>
        <th>
            Admin Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.short_description)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.detail)
        </td>*@
        <td>
            <img src='@Url.Content(item.image_url)' style=" height:20%;width:20% ;border-radius:24px 24px 24px 24px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.posted_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Admin.admin_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.product_id }) |
            @Html.ActionLink("Details", "Details", new { id = item.product_id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.product_id }) |
            @Html.ActionLink("Order Now", "OrderNow", new { id = item.product_id }) |

        </td>
    </tr>
}

</table>
