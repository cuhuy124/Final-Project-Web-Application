@model IEnumerable<Online_Store_Test4.Database.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Category for admin</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Category ID
        </th>
        <th>
            Image
        </th>
        <th>
            Category Name
        </th>

        <th>
            Admin Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.category_id)
            </td>
            <td>
                <a href='@Url.Action("Ads", "Categories", new { id = item.category_id })'>
                    <img src='@Url.Content(item.category_image_URL)' style=" height:20%;width:20% ;border-radius:24px 24px 24px 24px" />\
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Admin.admin_name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.category_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.category_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.category_id })
            </td>
        </tr>
    }

</table>
