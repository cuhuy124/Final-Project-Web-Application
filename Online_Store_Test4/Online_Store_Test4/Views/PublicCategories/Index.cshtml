@model IEnumerable<Online_Store_Test4.Database.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Category</h2>

<div class="col-lg-8 col-md-8">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-8" style="height:200px;margin-top:100px">
                <a href='@Url.Action("Ads", "PublicCategories", new { id = item.category_id })'>
                    <img src='@Url.Content(item.category_image_URL)' style=" height:100%;width:100% ;border-radius:24px 24px 24px 24px" />
                    <h3 style="color:#808080; font-family:'Arial Rounded MT';text-align:center">@Html.DisplayFor(modelItem => item.name)</h3>
                </a>
            </div>
        }
    </div>
</div>
